{
  "name": "sklep.typeofweb",
  "private": "true",
  "scripts": {
    "dev": "yarn --frozen-lockfile && lerna bootstrap && lerna run dev --parallel",
    "eslint": "yarn lerna run eslint --stream",
    "test": "yarn lerna run test --stream",
    "test:ci": "yarn lerna run test_:ci --stream",
    "tsc": "yarn lerna run tsc --stream"
  },
  "workspaces": {
    "packages": [
      "apps/*"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "concurrently": "6.2.0",
    "cross-env": "7.0.3",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-functional": "3.2.1",
    "eslint-plugin-import": "2.23.3",
    "husky": "6.0.0",
    "lerna": "4.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "ts-node": "10.0.0",
    "typescript": "4.2.4",
    "weak-napi": "2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "yarn prettier --write"
    ],
    "*.json,*.md,*.yaml,*.yml": [
      "yarn prettier --write"
    ]
  }
}
