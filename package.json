{
  "name": "sklep.typeofweb",
  "version": "1.0.0",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "dev": "yarn --frozen-lockfile && lerna run dev --parallel",
    "eslint": "yarn lerna run eslint --stream"
  },
  "workspaces": {
    "packages": [
      "apps/*"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "husky": "4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "ts-node": "9.0.0",
    "typescript": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "yarn prettier --write"
    ],
    "*.json,*.md,*.yaml,*.yml": [
      "yarn prettier --write"
    ]
  }
}
