{
  "name": "api",
  "version": "1.0.0-alpha.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn:dev:start:*\"",
    "dev:start:server": "wait-on tcp:5432 --interval 5000 && yarn db:migrate:up && ts-node-dev -s -H -T --exit-child --respawn src/index.ts",
    "dev:start:db": "docker-compose up",
    "db:stop": "docker-compose down",
    "db:migrate:up": "prisma migrate dev && prisma generate",
    "eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix",
    "test": "cross-env DATABASE_URL=\"postgresql://postgres:sklep@localhost:5432/sklep_test?schema=public\" concurrently --kill-others-on-fail \"yarn:test:*\"",
    "test:db": "docker-compose up",
    "test:server": "wait-on tcp:5432 --interval 5000 && (yarn ts-node-script ./jest-cleanup.ts || true) && yarn db:migrate:up && jest --detectOpenHandles --verbose",
    "test:lint": "wait-on tcp:5432 --interval 5000 && yarn run eslint && yarn run tsc",
    "tsc": "tsc --noEmit",
    "test_:ci": "docker-compose up -d && cross-env DATABASE_URL=\"postgresql://postgres:sklep@localhost:5432/sklep_test?schema=public\" yarn test:server && yarn test:lint"
  },
  "dependencies": {
    "@hapi/bell": "12.2.0",
    "@hapi/boom": "9.1.2",
    "@hapi/cookie": "11.0.2",
    "@hapi/hapi": "20.1.3",
    "@hapi/inert": "6.0.3",
    "@hapi/joi": "17.1.1",
    "@hapi/vision": "6.1.0",
    "@prisma/client": "2.23.0",
    "@sklep/calculations": "^1.0.0-alpha.0",
    "bcrypt": "5.0.1",
    "bluebird": "3.7.2",
    "dotenv": "10.0.0",
    "hapi-swagger": "14.1.3",
    "image-size": "1.0.0",
    "joi": "17.4.0",
    "ms": "2.1.3",
    "ramda": "0.27.1",
    "slugify": "1.5.3",
    "stripe": "8.150.0",
    "zxcvbn": "4.4.2"
  },
  "devDependencies": {
    "@swc-node/jest": "1.3.0",
    "@tsconfig/node12": "1.0.7",
    "@types/bcrypt": "5.0.0",
    "@types/bluebird": "3.5.35",
    "@types/cookie": "0.4.0",
    "@types/faker": "5.5.5",
    "@types/hapi__bell": "11.0.2",
    "@types/hapi__cookie": "10.1.2",
    "@types/hapi__hapi": "20.0.8",
    "@types/hapi__inert": "5.2.2",
    "@types/hapi__joi": "17.1.6",
    "@types/hapi__vision": "5.5.2",
    "@types/jest": "26.0.23",
    "@types/ms": "0.7.31",
    "@types/node": "15.6.1",
    "@types/ramda": "0.27.40",
    "@types/zxcvbn": "4.4.1",
    "cookie": "0.4.1",
    "cross-env": "7.0.3",
    "eslint": "7.27.0",
    "faker": "5.5.3",
    "jest": "27.0.2",
    "jest-extended": "0.11.5",
    "prisma": "2.23.0",
    "ts-node-dev": "1.1.6",
    "wait-on": "5.3.0"
  }
}
