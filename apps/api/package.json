{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn:dev:start:*\"",
    "dev:start:server": "wait-on tcp:5432 --interval 5000 && yarn db:migrate:up && ts-node-dev -s -H -T src/index.ts",
    "dev:start:db": "docker-compose up",
    "db:stop": "docker-compose down",
    "db:migrate:up": "prisma migrate up --experimental --create-db && prisma generate",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test": "cross-env DATABASE_URL=\"postgresql://postgres:sklep@localhost:5432/sklep_test?schema=public\" concurrently --kill-others-on-fail \"yarn:test:*\"",
    "test:db": "docker-compose up",
    "test:server": "wait-on tcp:5432 --interval 5000 && (yarn ts-node-script ./jest-cleanup.ts || true) && yarn db:migrate:up && jest --detectOpenHandles",
    "test:lint": "wait-on tcp:5432 --interval 5000 && yarn run eslint && yarn run tsc",
    "tsc": "tsc --noEmit",
    "test:ci": "docker-compose up -d && cross-env DATABASE_URL=\"postgresql://postgres:sklep@localhost:5432/sklep_test?schema=public\" yarn test:server && yarn test:lint"
  },
  "dependencies": {
    "@hapi/bell": "12.1.0",
    "@hapi/boom": "9.1.0",
    "@hapi/cookie": "11.0.1",
    "@hapi/hapi": "20.0.0",
    "@hapi/inert": "6.0.2",
    "@hapi/joi": "17.1.1",
    "@hapi/vision": "6.0.1",
    "@prisma/client": "2.5.1",
    "bcrypt": "5.0.0",
    "dotenv": "8.2.0",
    "hapi-swagger": "14.0.0",
    "joi": "17.2.1",
    "ms": "2.1.2",
    "slugify": "1.4.5",
    "zxcvbn": "4.4.2"
  },
  "devDependencies": {
    "@prisma/cli": "2.5.1",
    "@swc-node/jest": "0.3.4",
    "@tsconfig/node12": "1.0.7",
    "@types/bcrypt": "3.0.0",
    "@types/faker": "4.1.12",
    "@types/hapi__bell": "11.0.0",
    "@types/hapi__cookie": "10.1.0",
    "@types/hapi__hapi": "20.0.0",
    "@types/hapi__inert": "5.2.0",
    "@types/hapi__joi": "17.1.4",
    "@types/hapi__vision": "5.5.1",
    "@types/jest": "26.0.13",
    "@types/ms": "0.7.31",
    "@types/node": "14.6.2",
    "@types/zxcvbn": "4.4.0",
    "cross-env": "7.0.2",
    "eslint": "7.8.0",
    "faker": "5.1.0",
    "jest": "26.4.2",
    "ts-node-dev": "1.0.0-pre.61",
    "wait-on": "5.2.0"
  }
}
