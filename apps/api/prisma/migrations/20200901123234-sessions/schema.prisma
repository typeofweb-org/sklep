generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  id       Int     @default(autoincrement()) @id
  name     String?
  email    String  @unique
  password String
  role     Role    @default(USER)
}

model Session {
  id         String   @id
  validUntil DateTime

  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
